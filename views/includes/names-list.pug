div.table-responsive
	table.table.table-striped.mb-0
		thead
			tr
				//th
				th
				th.data-header.text-right Height
				th.data-header.text-right Age
				th.data-header.text-right Transaction
				th.data-header.text-right
					span.border-dotted(title="The number of transactions included in each block.", data-toggle="tooltip") Operation

				th.data-header.text-right
					span.border-dotted(title="The average fee (sat/vB) for all block transactions.", data-toggle="tooltip") Names
				th.data-header.text-right Value

		tbodys
			each name, nameIndex in nameList
				if (name && ((sort == "desc" && (nameIndex < nameList.length - 1 || name.height == 0)) || (sort == "asc" && (name.height == 0 || nameIndex > 0))))
					tr
						td
							if (sort == "desc")
								small.text-muted #{(blockIndex + offset + 1).toLocaleString()}
							else
								small.text-muted #{(blockIndex + offset).toLocaleString()}
						td.data-cell.text-monospace.text-right
							a(href=("./block-height/" + name.height)) #{name.height.toLocaleString()}

						- var timeAgoTime = moment.utc(new Date()).diff(moment.utc(new Date(parseInt(name.block.time) * 1000)));
						- var timeAgo = moment.duration(timeAgoTime);
						- var timeDiff = null;

						if (sort == "asc")
							if (nameIndex > 0)
								- var timeDiff = moment.duration(moment.utc(new Date(parseInt(name.block.time) * 1000)).diff(moment.utc(new Date(parseInt(nameList[nameIndex - 1].block.time) * 1000))));
						else
							if (blockIndex < blocks.length - 1)
								- var timeDiff = moment.duration(moment.utc(new Date(parseInt(name.block.time) * 1000)).diff(moment.utc(new Date(parseInt(nameList[nameIndex + 1].block.time) * 1000))));


						td.data-cell.text-monospace.text-right
							if (sort != "asc" && nameIndex == 0 && offset == 0 && timeAgoTime > (15 * 60 * 1000))
								- var timeAgoTime = name.block.time;
								span.text-danger.border-dotted(title="It's been > 15 min since this latest block.", data-toggle="tooltip")
									include ./time-ago-text.pug
							else
								- var timeAgoTime = name.block.time;
								include ./time-ago-text.pug
						td.data-cell.text-monospace.text-right
							a(href=("./tx/" + name.txid)) #{name.txid.toLocaleString()}

						td.data-cell.text-monospace.text-right name_update

						td.data-cell.text-monospace.text-right #{name.name.toLocaleString()}
						td.data-cell.text-monospace.text-right #{name.value.toLocaleString()}
						- var lastBlock = block;
